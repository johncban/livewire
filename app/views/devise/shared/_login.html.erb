<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%# <%= f.label :email, class: "label" %>
    <div class="control">
      <p class="control has-icons-left has-icons-right">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-primary", placeholder: "Email" %>
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </p>
    </div>
  </div>

  <div class="field">
    <%# <%= f.label :password, class: "label" %>
      <div class="control">
        <p class="control has-icons-left has-icons-right">
          <%= f.password_field :password, autocomplete: "current-password", class: "input is-primary", placeholder: "Password" %>
           <span class="icon is-small is-left">
            <i class="fas fa-lock"></i>
          </span>
        </p>
      </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "checkbox" %>
      <%= f.label :remember_me, class: "checkbox" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => 'button is-primary is-dark' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>