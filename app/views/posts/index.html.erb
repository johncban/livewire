<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>

<%= @posts.count == 0 ? "no" : @posts.count %> posts

<table>
  <thead>
    <tr>
      <th>Post</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.posts.each do |post| %>
      <tr>
        <%= render 'index_fields', post: post %>
      </tr>
    <% end %>
  </tbody>
</table>

