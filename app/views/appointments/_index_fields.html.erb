
<tr>
    <td><%= appointment.appt_name %></td>
    <td><%= appointment.appt_description %></td>
    <td><%= appointment.appt_date %></td>
    <td><%= appointment.appt_address %></td>
    <td><%= appointment.appt_city %></td>
    <td><%= appointment.appt_state %></td>
    <td><%= link_to '<i class="fab fa-readme"></i>'.html_safe, appointment %></td>
    <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_appointment_path(appointment) %></td>
    <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>