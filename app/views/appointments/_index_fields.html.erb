
<tr>
    <td><%= appointment.appt_name %></td>
    <td><%= appointment.appt_description %></td>
    <td><%= appointment.appt_date %></td>
    <td><%= appointment.locations.first.appt_address %></td>
    <td><%= appointment.locations.first.appt_city %></td>
    <td><%= appointment.locations.first.appt_state %></td>
    <td><%= link_to '<i class="fab fa-readme"></i>'.html_safe, user_appointment_path(current_user.id, appointment) %></td>
    <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_user_appointment_path(current_user.id, appointment) %></td>
    <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, user_appointment_path(current_user.id, appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>